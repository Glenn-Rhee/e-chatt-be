generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum Gender {
  MALE
  FEMALE
  UNKNOWN
}

enum FriendStatus {
  PENDING
  ACCEPTED
  REJECTED
  BLOCKED
}

model User {
  id               String          @id @unique
  username         String
  email            String          @unique
  created_at       DateTime        @default(now())
  isOnline         Boolean         @default(false)
  lastSeen         DateTime?
  updated_at       DateTime        @updatedAt
  userDetail       UserDetail?
  conversations    Conversation[]  @relation("ConversationUsers")
  messages         Message[]
  sentRequests     FriendRequest[] @relation("Requester")
  receivedRequests FriendRequest[] @relation("Receiver")
  friendshipA      FriendShip[]    @relation("FriendshipUserA")
  friendShipB      FriendShip[]    @relation("FriendshipUserB")
}

model UserDetail {
  id        String    @id @unique @default(uuid())
  gender    Gender
  birthday  DateTime?
  image_url String?
  User      User      @relation(fields: [userId], references: [id])
  userId    String    @unique
}

model Message {
  id             String       @id @unique @default(uuid())
  content        String
  senderId       String
  sender         User         @relation(fields: [senderId], references: [id])
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])

  createdAt DateTime @default(now())
  isRead    Boolean  @default(false)
}

model Conversation {
  id        String    @id @unique @default(uuid())
  users     User[]    @relation("ConversationUsers")
  messages  Message[]
  createdAt DateTime  @default(now())
}

model FriendRequest {
  id          String       @id @default(uuid())
  requesterId String
  requester   User         @relation("Requester", fields: [requesterId], references: [id])
  receiverId  String
  receiver    User         @relation("Receiver", fields: [receiverId], references: [id])
  status      FriendStatus @default(PENDING)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([requesterId, receiverId])
}

model FriendShip {
  id        String   @id @default(uuid())
  userIdA   String
  userIdB   String
  userA     User     @relation("FriendshipUserA", fields: [userIdA], references: [id])
  userB     User     @relation("FriendshipUserB", fields: [userIdB], references: [id])
  createdAt DateTime @default(now())

  @@unique([userIdA, userIdB])
}
